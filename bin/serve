#!/usr/bin/env bash

rm -rf _site
mkdir -p _site/style

nix-shell -p sass --pure --command "
  echo 'Compiling SCSS'
  sass style/style.scss _site/style/style.css
"

nix-shell -p nodePackages.pnpm --command "
  echo 'Serving site'
  pnpm add fast-glob @11ty/eleventy @11ty/eleventy-img
  pnpm eleventy --serve
"

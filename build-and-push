#!/usr/bin/env

bun install
bun run remove
bun run build_sass
bun run minify_css
bun run build_eleventy
bun run minify_html

set +x
export NEOCITIES_API_KEY=$(cat /home/user/.neocities/vegan-prestwich)
set -x

gem install --no-document neocities
neocities push --prune _site

git add .
git commit -m "auto-updated after build"
git push
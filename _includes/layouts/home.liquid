---
layout: default
---

<div class="page">

  <h1>
    Vegan Prestwich
  </h1>
  
  {{ content }}
  
  {% include "contribute.html" %}

  <p>
    <strong>Recent updates:</strong>
    {% assign recently_updated = collections.places | sort: "data.last_modified_at" | reverse | slice: 0, 15 %}
    {% for place in recently_updated %}
      <a href="{{ place.url }}">{{ place.data.name | escape }}</a>{% unless forloop.last %}, {% endunless %}
    {% endfor %}
  </p>

  <div class="row">
      <div class="col">
          <h2>Shops</h2>
          {% include "filtered-places", show: collections.shops, detailed: false %}
      </div>
      <div class="col">
          <h2>Restaurants</h2>
          {% include "filtered-places", show: collections.restaurants, detailed: false %}
      </div>
      <div class="col">
          <h2>Food Delivery / Takeaways</h2>
          {% include "filtered-places", show: collections.deliveries, detailed: false %}
      </div>
  </div>
</div>
